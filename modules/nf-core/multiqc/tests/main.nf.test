nextflow_process {

    name "Test Process MULTIQC"
    script "../main.nf"
    process "MULTIQC"

    tag "modules"
    tag "modules_nfcore"
    tag "multiqc"

    config "./nextflow.config"

    test("multiqc - report containing just fastp") {

        when {
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file('${moduleDir}/tests/ERR4334351.fastp.json', checkIfExists: true)
                ]
                input[1] = []
                input[2] = []
                input[3] = []
                input[4] = []
                input[5] = []
                input[6] = []
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match("multiqc_versions_single") },
                { assert process.out.report[0] ==~ ".*/multiqc_report.html" },
                { assert process.out.data[0] ==~ ".*/multiqc_data" }
            )
        }

    }
}
