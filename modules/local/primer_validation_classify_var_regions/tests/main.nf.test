nextflow_process {

    name "Test Process PRIMER_VALIDATION_CLASSIFY_VAR_REGIONS"
    script "../main.nf"
    process "PRIMER_VALIDATION_CLASSIFY_VAR_REGIONS"
    tag "modules"
    tag "primer_validation_classify_var_regions"

    test("primer_validation_classify_var_regions - should have primers in F and R") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                    [ id:'ERR4334351', single_end:false ], // meta map
                    file('${projectDir}/modules/local/primer_validation_classify_var_regions/tests/data/ERR4334351.tblout.deoverlapped', checkIfExists: true),
                    file('${projectDir}/modules/local/primer_validation_classify_var_regions/tests/data/ERR4334351_permuted_primers.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.primer_validation_out).match("primer_validation_out") }
            )
        }

    }

}
