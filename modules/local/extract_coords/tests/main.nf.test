nextflow_process {

    name "Test Process EXTRACT_COORDS"
    script "../main.nf"
    process "EXTRACT_COORDS"
    tag "modules"
    tag "extract_coords"

    test("Should take a fasta file and an easel coordinates file and extract two subunit fasta files for the SSU and LSU, and a concatenated SSU and LSU coordinates file") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file('${projectDir}/modules/local/extract_coords/tests/data/test.fasta', checkIfExists: true),
                ]
                input[1] = [
                    [ id:'test', single_end:false ], // meta map
                    file('${projectDir}/modules/local/extract_coords/tests/data/test.matched_seqs_with_coords', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.ssu_fasta).match("ssu_fasta") },
                { assert snapshot(process.out.lsu_fasta).match("lsu_fasta") },
                { assert snapshot(process.out.concat_ssu_lsu_coords).match("concat_ssu_lsu_coords") }
            )
        }

    }

}
